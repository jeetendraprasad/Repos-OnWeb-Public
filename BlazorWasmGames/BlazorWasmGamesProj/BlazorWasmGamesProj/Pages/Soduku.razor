@page "/"
@page "/soduku"

<h3>Soduku</h3>

<div>
    <input type="text" name="rows_size" @bind=@rows placeholder="Rows" />
    <input type="text" name="cols_size" @bind=@cols placeholder="Columns" />
    <button @onclick=@( async () => await UpdateGrid())>Update Grid</button>
</div>


<div style="height:0;width:50%;padding-bottom:50%;background-color:burlywood">

    <table>
        @for (int i = 0; i < rows; i++)
        {
            <tr>
                @for (int j = 0; j < cols; j++)
                {
                    <td style="@GetStyle()">
                        <div>1</div>
                    </td>
                }
            </tr>
        }
    </table>

</div>


@code {
    int rows = 10;
    int cols = 10;

    async Task UpdateGrid()
    {
        await Task.Delay(1);
    }

    string GetStyle()
    {
        string retVal = "height:0;width:" + (100 / cols).ToString() + "%;padding-bottom:" + (100 / cols).ToString() + "%;background-color:burlywood; border: 1px solid black;";
        return retVal;

    }
}
