@page "/calculator2"
@rendermode InteractiveServer


<h1>Calculator2 Demo</h1>

<div class="container" style="width: @(ElemWidthInPx)px; padding: 0px;">

    <h1>Calculator2 Demo in body</h1>

    <div class="col-lg-12">
        <Calculator2Display></Calculator2Display>
    </div>

        @for (int i = 0; i < NoOfCols; i++)
