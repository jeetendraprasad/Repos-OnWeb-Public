@page "/calculator2"
@rendermode InteractiveServer


<h1>Calculator2 Demo</h1>

<div class="container nopadding">

    <div class="col-lg-12 nopadding">
        <Calculator2Display></Calculator2Display>
    </div>

    <table class="table table-bordered border-dark" border="0" cellspacing="0" cellpadding="0">
        <thead hidden>
            <tr>
                @for (int i = 0; i < NoOfCols; i++)
                {
                    <th width="@(100/NoOfCols)%">Header1</th>
                }
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < NoOfRows; i++)
            {
                <tr>
                    @for (int j = 0; j < NoOfCols; j++)
                    {
                        <td class="nopadding">
                            <Calculator2Button Text="@(i.ToString() + "," + j.ToString())"></Calculator2Button>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>

    @for (int i = 0; i < NoOfCols; i++)
    {
        <div width=@(this.ElemWidthInPx/NoOfCols)>
            <Calculator2Button Text="@(i.ToString())"></Calculator2Button>
        </div>
    }

</div>


<div class="container nopadding">
    <table class="table table-bordered border-dark">
        <thead hidden>
            <tr>
                <th width="10%">Header1</th>
                <th width="30%">Header2</th>
                <th width="70%">Header3</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>GFG</td>
                <td>HTML</td>
                <td>50</td>
            </tr>
        </tbody>
    </table>
</div>